{
    "name": "mgfn-portfolio",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ]
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "a11y:test": "vitest run src/test/accessibility.test.tsx",
        "lint:a11y": "eslint src --ext .tsx,.ts --config .eslintrc.json",
        "prepare": "husky",
        "pre-commit": "npm run test"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tailwindcss": "^4.1.11"
    },
    "devDependencies": {
        "@axe-core/react": "^4.10.2",
        "@eslint/js": "^9.30.1",
        "@playwright/test": "^1.54.2",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^24.1.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.6.0",
        "axe-core": "^4.10.3",
        "eslint": "^9.30.1",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "lint-staged": "^16.1.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.35.1",
        "vite": "^7.0.4",
        "vitest": "^3.2.4"
    }
}
